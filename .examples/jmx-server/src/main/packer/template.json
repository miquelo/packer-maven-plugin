{
  "variables": {
    "repositoryName": "repository"
  },
  "builders": [
    {
      "type": "docker",
      "image": "openjdk:8",
      "commit": true,
      "changes": [
        "ENTRYPOINT /init"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "{{template_dir}}/setup.sh"
    },
    {
      "type": "file",
      "source": "{{template_dir}}/${project.artifactId}-${project.version}.jar",
      "destination": "/usr/local/lib/application/"
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "{{ user `repositoryName` }}/${project.artifactId}",
      "tag": "${project.version}"
    }
  ]
}
